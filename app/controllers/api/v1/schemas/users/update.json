{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "first_name": {
      "type": "string",
      "minLength": 1,
      "invalidMessage": "'first_name' must be a non-blank string"
    },
    "last_name": {
      "type": "string",
      "minLength": 1,
      "invalidMessage": "'last_name' must be a non-blank string"
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "invalidMessage": "'email' must be a non-blank string"
    },
    "dob": {
      "type": "string",
      "format": "date",
      "invalidMessage": "'dob' must be a valid iso8601 date"
    },
    "image": {
      "type": "string",
      "invalidMessage": "'image' must be a valid URL"
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "invalidMessage": "'age' must be a non-zero number"
    },
    "married": {
      "type": "boolean",
      "invalidMessage": "'married' must be a boolean"
    }
  }
}
